{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "xo",
        "plugin:react/recommended"
    ],
    "overrides": [
        {
            "extends": [
                "xo-typescript"
            ],
            "files": [
                "*.ts",
                "*.tsx"
            ]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
		"ignorePatterns": [
			"**/vite.config.ts",
			"**/vitest.config.ts",
			"**/setupTests.ts"
		],
    "rules": {
			"react/react-in-jsx-scope": "off",
			"@typescript-eslint/naming-convention": "off",
			"new-cap": "off",
			"max-params": "off"
    }
}
